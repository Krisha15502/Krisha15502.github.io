{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Law",
    "subtitle": "10 UK Universities by Satisfaction in 2019",
    "fontSize": 13,
    "subtitleFontSize": 10,
    "font": "Times New Roman",
    "fontWeight": "bold",
    "anchor": "middle"
  },
  "width": 280,
  "height": 200,
  "config": {"font": "Times New Roman"},
  "data": {
    "url": "https://raw.githubusercontent.com/Krisha15502/Krisha15502.github.io/refs/heads/main/data/task6/law.json",
    "format": {"type": "json", "property": "ratings"}
  },
  "transform": [
    {"calculate": "toNumber(datum.satisfaction)", "as": "satisfaction_num"},
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "satisfaction_num", "order": "descending"}]
    },
    {"filter": "datum.rank <= 10"}
  ],
  "mark": {"type": "bar", "color": "#EAD94C", "tooltip": true},
  "encoding": {
    "y": {
      "field": "name",
      "type": "nominal",
      "title": "University",
      "sort": "-x",
      "axis": {
        "labelFont": "Times New Roman",
        "labelFontSize": 8,
        "labelLimit": 150
      }
    },
    "x": {
      "field": "satisfaction_num",
      "type": "quantitative",
      "aggregate": "max",
      "title": "Satisfaction %",
      "axis": {
        "titleFont": "Times New Roman",
        "titleFontSize": 10,
        "labelFont": "Times New Roman",
        "labelFontSize": 9,
        "grid": true,
        "gridColor": "#e0e0e0"
      },
      "scale": {"domain": [0, 100]}
    },
    "tooltip": [
      {"field": "name", "type": "nominal", "title": "University"},
      {
        "field": "satisfaction_num",
        "type": "quantitative",
        "title": "Satisfaction %"
      }
    ]
  }
}