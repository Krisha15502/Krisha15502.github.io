{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Western Banks' Investment Banking Revenue is Falling in China",
    "subtitle": "2018-2022 | Chinese Yuan, Millions",
    "fontSize": 18,
    "subtitleFontSize": 13,
    "anchor": "middle",
    "font": "Times New Roman",
    "subtitleFont": "Times New Roman",
    "fontWeight": "bold"
  },
  "width": 700,
  "height": 450,
  "config": {"font": "Times New Roman"},
  "data": {
    "url": "https://raw.githubusercontent.com/Krisha15502/Krisha15502.github.io/main/data/china_banks_data.csv"
  },
  "layer": [
    {
      "mark": {
        "type": "rule",
        "strokeDash": [4, 4],
        "color": "#666",
        "strokeWidth": 1.5
      },
      "encoding": {"y": {"datum": 0}}
    },
    {
      "mark": {
        "type": "line",
        "point": {"filled": true, "size": 80},
        "strokeWidth": 3
      },
      "encoding": {
        "x": {
          "field": "year",
          "type": "quantitative",
          "axis": {
            "title": "Year",
            "titleFont": "Times New Roman",
            "titleFontSize": 14,
            "titleFontWeight": "bold",
            "labelFont": "Times New Roman",
            "labelFontSize": 12,
            "grid": false,
            "tickCount": 5,
            "format": "d"
          },
          "scale": {"domain": [2018, 2022]}
        },
        "y": {
          "field": "investment_banking_revenue",
          "type": "quantitative",
          "axis": {
            "title": "Investment Banking Revenue (Rmb, millions)",
            "titleFont": "Times New Roman",
            "titleFontSize": 14,
            "titleFontWeight": "bold",
            "labelFont": "Times New Roman",
            "labelFontSize": 12,
            "grid": true,
            "gridColor": "#e0e0e0",
            "tickCount": 8
          },
          "scale": {"domain": [0, 650]}
        },
        "color": {
          "field": "bank",
          "type": "nominal",
          "scale": {
            "domain": [
              "Goldman Sachs",
              "Deutsche Bank",
              "Morgan Stanley",
              "UBS",
              "Credit Suisse",
              "HSBC",
              "JPMorgan"
            ],
            "range": [
              "#E5446D",
              "#190B28",
              "#E89005",
              "#8e44ad",
              "#27ae60",
              "#276FBF",
              "#F1D302"
            ]
          },
          "legend": {
            "title": "Bank",
            "titleFont": "Times New Roman",
            "titleFontSize": 13,
            "titleFontWeight": "bold",
            "labelFont": "Times New Roman",
            "labelFontSize": 12,
            "orient": "right",
            "symbolSize": 150,
            "symbolStrokeWidth": 2
          }
        },
        "tooltip": [
          {"field": "bank", "type": "nominal", "title": "Bank"},
          {
            "field": "year",
            "type": "quantitative",
            "title": "Year",
            "format": "d"
          },
          {
            "field": "investment_banking_revenue",
            "type": "quantitative",
            "title": "Revenue (Rmb mn)",
            "format": ","
          }
        ]
      }
    }
  ]
}