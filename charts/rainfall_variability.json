{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Rainfall Variability Across India (1940-2024)",
    "subtitle": "Dark colors indicate extreme deviations from normal rainfall patterns",
    "fontSize": 20,
    "subtitleFont": "Times New Roman",
    "subtitleFontSize": 14,
    "fontWeight": 600,
    "color": "#2c3e50",
    "font": "Times New Roman",
    "anchor": "middle"
  },
  "width": 800,
  "height": 450,
  "background": "white",
  "config": {
    "view": {"strokeWidth": 0},
    "axis": {
      "labelFontSize": 11,
      "titleFontSize": 13,
      "labelColor": "#555",
      "titleColor": "#333",
      "labelFont": "Times New Roman",
      "titleFont": "Times New Roman",
      "grid": false
    },
    "legend": {"labelFont": "Times New Roman", "titleFont": "Times New Roman"}
  },
  "data": {
    "url": "https://raw.githubusercontent.com/Krisha15502/Krisha15502.github.io/refs/heads/main/data/rain.csv"
  },
  "params": [
    {
      "name": "state_filter",
      "value": "SHOW_DEFAULT",
      "bind": {
        "input": "select",
        "options": [
          "SHOW_DEFAULT",
          "Uttar Pradesh",
          "Rajasthan",
          "Punjab",
          "Kerala",
          "Karnataka",
          "Bihar",
          "Maharashtra",
          "Assam-Meghalaya",
          "Andhra Pradesh",
          "Telangana",
          "Tamil Nadu, Puducherry and Karaikal",
          "West Bengal",
          "Odisha",
          "Gujarat",
          "Madhya Pradesh",
          "Chhattisgarh",
          "Jharkhand",
          "Arunachal Pradesh",
          "Nagaland-Manipur-Mizoram-Tripura",
          "Haryana-Delhi-Chandigarh",
          "Himachal Pradesh",
          "Jammu and Kashmir",
          "Uttarakhand",
          "Maharashtra-Goa",
          "Lakshadweep"
        ],
        "labels": [
          "Featured (Default)",
          "Uttar Pradesh",
          "Rajasthan",
          "Punjab",
          "Kerala",
          "Karnataka",
          "Bihar",
          "Jharkhand",
          "Assam-Meghalaya",
          "Andhra Pradesh",
          "Telangana",
          "Tamil Nadu",
          "West Bengal",
          "Odisha",
          "Gujarat",
          "Madhya Pradesh",
          "Chhattisgarh",
          "Maharashtra",
          "Arunachal Pradesh",
          "Nagaland-Manipur-Mizoram-Tripura",
          "Haryana-Delhi",
          "Himachal Pradesh",
          "Jammu and Kashmir",
          "Uttarakhand",
          "Lakshadweep"
        ],
        "name": "Select State: "
      }
    },
    {
      "name": "year_start",
      "value": 1940,
      "bind": {
        "input": "range",
        "min": 1940,
        "max": 2020,
        "step": 5,
        "name": "Start Year: "
      }
    },
    {
      "name": "year_end",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 1950,
        "max": 2024,
        "step": 5,
        "name": "End Year: "
      }
    },
    {
      "name": "hover",
      "select": {"type": "point", "on": "mouseover", "clear": "mouseout"}
    }
  ],
  "transform": [
    {"filter": "datum.year >= year_start && datum.year <= year_end"},
    {"filter": "datum.state != 'Andaman and Nicobar Islands'"},
    {
      "filter": "state_filter == 'SHOW_DEFAULT' ? (datum.state == 'Uttar Pradesh' || datum.state == 'Rajasthan' || datum.state == 'Punjab' || datum.state == 'Kerala' || datum.state == 'Karnataka' || datum.state == 'Bihar' || datum.state == 'Jharkhand' || datum.state == 'Assam-Meghalaya' || datum.state == 'Arunachal Pradesh' || datum.state == 'Nagaland-Manipur-Mizoram-Tripura') : datum.state == state_filter"
    }
  ],
  "mark": {"type": "rect", "stroke": "white", "strokeWidth": 1},
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "axis": {
        "title": "Year",
        "labelAngle": -45,
        "labelFontSize": 10,
        "labelExpr": "datum.value % 5 == 0 ? datum.label : ''"
      }
    },
    "y": {
      "field": "state",
      "type": "nominal",
      "axis": {"title": "State/Region", "labelFontSize": 11, "labelLimit": 300},
      "sort": [
        "Arunachal Pradesh",
        "Nagaland-Manipur-Mizoram-Tripura",
        "Uttar Pradesh",
        "Punjab",
        "Bihar",
        "Jharkhand",
        "Assam-Meghalaya",
        "Kerala",
        "Karnataka",
        "Rajasthan"
      ]
    },
    "color": {
      "field": "variability_percent",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [-60, -40, -20, 0, 20, 40, 60],
        "range": [
          "#3D0308",
          "#6B0F1A",
          "#9B2C2C",
          "#D8CFC4",
          "#88B584",
          "#5FA27A",
          "#1F4D0C"
        ]
      },
      "legend": {
        "title": "Rainfall Departure (%)",
        "orient": "right",
        "direction": "vertical",
        "gradientLength": 350,
        "titleFontSize": 13,
        "labelFontSize": 11
      }
    },
    "strokeWidth": {
      "condition": {"param": "hover", "empty": false, "value": 3},
      "value": 1
    },
    "stroke": {
      "condition": {"param": "hover", "empty": false, "value": "white"},
      "value": "white"
    },
    "tooltip": [
      {"field": "state", "type": "nominal", "title": "State"},
      {"field": "year", "type": "ordinal", "title": "Year"},
      {
        "field": "actual_rainfall",
        "type": "quantitative",
        "title": "Actual Rainfall (mm)",
        "format": ".1f"
      },
      {
        "field": "normal_rainfall",
        "type": "quantitative",
        "title": "Average Rainfall (mm)",
        "format": ".1f"
      },
      {
        "field": "variability_percent",
        "type": "quantitative",
        "title": "Departure (%)",
        "format": ".1f"
      }
    ]
  }
}