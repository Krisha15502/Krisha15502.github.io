{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Machine Learning Paper Clusters",
    "subtitle": "1000 ArXiv papers clustered by content similarity using K-Means",
    "fontSize": 18,
    "subtitleFontSize": 13,
    "anchor": "middle",
    "font": "Times New Roman",
    "fontWeight": "bold"
  },
  "width": 650,
  "height": 550,
  "config": {"font": "Times New Roman"},
  "params": [
    {
      "name": "hover",
      "select": {
        "type": "point",
        "on": "mouseover",
        "clear": "mouseout",
        "fields": ["topic"]
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/Krisha15502/Krisha15502.github.io/main/data/ml_papers_real-2.csv"
  },
  "mark": {
    "type": "circle",
    "opacity": 0.8,
    "stroke": "white",
    "strokeWidth": 1.5,
    "tooltip": true
  },
  "encoding": {
    "x": {
      "field": "pca_x",
      "type": "quantitative",
      "title": "Principal Component 1",
      "axis": {
        "titleFont": "Times New Roman",
        "titleFontSize": 14,
        "titleFontWeight": "bold",
        "labelFont": "Times New Roman",
        "labelFontSize": 11,
        "grid": true,
        "gridColor": "#e0e0e0"
      }
    },
    "y": {
      "field": "pca_y",
      "type": "quantitative",
      "title": "Principal Component 2",
      "axis": {
        "titleFont": "Times New Roman",
        "titleFontSize": 14,
        "titleFontWeight": "bold",
        "labelFont": "Times New Roman",
        "labelFontSize": 11,
        "grid": true,
        "gridColor": "#e0e0e0"
      }
    },
    "size": {
      "field": "citations",
      "type": "quantitative",
      "scale": {"range": [100, 800]},
      "legend": {
        "title": "Citations",
        "titleFont": "Times New Roman",
        "titleFontSize": 12,
        "labelFont": "Times New Roman",
        "labelFontSize": 10
      }
    },
    "color": {
      "field": "topic",
      "type": "nominal",
      "scale": {"scheme": "category20"},
      "legend": {
        "title": "Research Topic (ML-Discovered)",
        "titleFont": "Times New Roman",
        "titleFontSize": 13,
        "titleFontWeight": "bold",
        "labelFont": "Times New Roman",
        "labelFontSize": 11,
        "orient": "right",
        "labelLimit": 200
      }
    },
    "opacity": {"condition": {"param": "hover", "value": 1}, "value": 0.2},
    "tooltip": [
      {"field": "title", "type": "nominal", "title": "Title"},
      {"field": "topic", "type": "nominal", "title": "Topic"},
      {"field": "citations", "type": "quantitative", "title": "Citations"},
      {"field": "year", "type": "quantitative", "title": "Year"}
    ]
  }
}