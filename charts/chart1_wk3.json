{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Top 10 Carbon-Dioxide Emitting Countries (2022)",
    "subtitle": "CO2 computed in Million Metric Tons",
    "fontSize": 18,
    "subtitleFontSize": 13,
    "anchor": "middle",
    "font": "Times New Roman",
    "subtitleFont": "Times New Roman",
    "fontWeight": "bold"
  },
  "width": 600,
  "height": 400,
  "config": {"font": "Times New Roman"},
  "data": {
    "url": "https://raw.githubusercontent.com/Krisha15502/Krisha15502.github.io/refs/heads/main/data/emissions_top10.csv"
  },
  "mark": {"type": "bar", "tooltip": true},
  "encoding": {
    "x": {
      "field": "emissions",
      "type": "quantitative",
      "title": "CO2 Emissions (MMT)",
      "axis": {
        "grid": false,
        "titleFont": "Times New Roman",
        "labelFont": "Times New Roman",
        "titleFontSize": 13
      }
    },
    "y": {
      "field": "country",
      "type": "nominal",
      "title": null,
      "sort": "-x",
      "axis": {"labelFontSize": 13, "labelFont": "Times New Roman"}
    },
    "color": {
      "field": "type",
      "type": "nominal",
      "scale": {
        "domain": ["Developed", "Developing"],
        "range": ["#684A52", "#e67e22"]
      },
      "legend": {
        "title": "Country Type",
        "titleFont": "Times New Roman",
        "labelFont": "Times New Roman",
        "titleFontSize": 12,
        "labelFontSize": 11
      }
    },
    "tooltip": [
      {"field": "country", "type": "nominal", "title": "Country"},
      {
        "field": "emissions",
        "type": "quantitative",
        "title": "CO2 Emissions (Mt)",
        "format": ","
      },
      {"field": "type", "type": "nominal", "title": "Classification"}
    ]
  }
}